{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Post list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Teaser</th>
            <th>Date</th>
            <th>Media</th>
            <th>Gallery</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td> entity.author.username </td>
            <td>{{ entity.teaser }}</td>
            <td>{{ entity.date|date("d - m - Y") }}</td>
            <td>{% if entity.media %}{{ entity.media.title|title }}{% endif %}</td>
            <td>{% if entity.gallery %}{{ entity.gallery.title|title }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_post_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
